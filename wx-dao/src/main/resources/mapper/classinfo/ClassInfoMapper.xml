<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cn.dao.classinfo.ClassInfoDao">
    <resultMap id="BaseResultMap" type="com.cn.beans.classinfo.ClassInfo">
        <result column="class_id" property="classId" jdbcType="INTEGER"/>
        <result column="class_name" property="className" jdbcType="VARCHAR"/>
        <result column="class_type" property="classType" jdbcType="VARCHAR"/>
        <result column="class_introduction" property="classIntroduction" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getClassInfoById" resultMap="BaseResultMap" parameterType="int">
        select class_name, class_type, class_introduction
        from class_info
        where class_id = #{id}
    </select>

</mapper>
